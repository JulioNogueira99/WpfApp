<UserControl x:Class="WpfApp.Views.CadastroPedido"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfApp.Enums"
             Height="550" Width="700" Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Pessoa:" VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding Pessoas}"
                SelectedItem="{Binding PessoaSelecionada}"
                DisplayMemberPath="Nome"
                Width="300" Margin="10,0,0,0"
                IsEnabled="{Binding PodeSelecionarPessoa}" />

        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Produto: " VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding Produtos}" SelectedItem="{Binding ProdutoSelecionado}" DisplayMemberPath="Nome" Width="300" />
            <TextBox Text="{Binding Quantidade}" Width="50" Margin="10,0,0,0" />
            <Button Content="Adicionar Produto" Command="{Binding AdicionarProdutoCommand}" Width="130" Margin="10,0,0,0"/>
        </StackPanel>

        <DataGrid Grid.Row="2" ItemsSource="{Binding ItensPedido}" SelectedItem="{Binding ItemSelecionado}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Produto" Binding="{Binding Produto.Nome}" Width="*"/>
                <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100"/>
                <DataGridTextColumn Header="Valor Unitário" Binding="{Binding Produto.Valor, StringFormat=C}" Width="120"/>
                <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat=C}" Width="120"/>
                <DataGridTemplateColumn Header="Remover" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="X" Command="{Binding DataContext.RemoverProdutoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,10" VerticalAlignment="Center">
            <TextBlock Text="Forma de Pagamento: " VerticalAlignment="Center" FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding FormasPagamento}" SelectedItem="{Binding FormaPagamentoSelecionada}" Width="150"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right">
            <TextBlock Text="Valor Total:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            <TextBlock Text="{Binding ValorTotal, StringFormat=C}" VerticalAlignment="Center" FontWeight="Bold" Width="100"/>
            <Button Content="Finalizar Pedido" Command="{Binding FinalizarPedidoCommand}" Width="120" Margin="5"/>
            <Button Content="Cancelar Pedido" Command="{Binding CancelarPedidoCommand}" Width="120" Margin="5"/>
        </StackPanel>

    </Grid>
</UserControl>
