<UserControl x:Class="WpfApp.Views.CadastroProduto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WpfApp.ViewModels"
             xmlns:converters="clr-namespace:WpfApp.Converters"
             Background="White">
    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>
    
    <UserControl.DataContext>
        <vm:ProdutoViewModel />
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10" VerticalAlignment="Center">
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Nome:"/>
                <TextBox Text="{Binding NomeFiltro, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
            </StackPanel>
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Código:"/>
                <TextBox Text="{Binding CodigoFiltro, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
            </StackPanel>
            <StackPanel Margin="0,0,10,0">
                <TextBlock Text="Valor Mínimo:"/>
                <TextBox Text="{Binding ValorMinFiltro, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Valor Máximo:"/>
                <TextBox Text="{Binding ValorMaxFiltro, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
            </StackPanel>
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding ProdutosFiltrados}" 
          SelectedItem="{Binding ProdutoSelecionado, Mode=TwoWay, Delay=100}" 
          AutoGenerateColumns="False" 
          IsReadOnly="{Binding EstaEditando, Converter={StaticResource InverseBooleanConverter}}"
          CanUserAddRows="False"
          Margin="0,0,0,10">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Validar}" Value="False">
                            <Setter Property="Background" Value="#FFFfE0E0"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="Código" Binding="{Binding Codigo, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=C, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Incluir" Command="{Binding IncluirCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Editar" Command="{Binding EditarCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Salvar" Command="{Binding SalvarCommand}" Width="100" Margin="0,0,10,0"/>
            <Button Content="Excluir" Command="{Binding ExcluirCommand}" Width="100"/>
        </StackPanel>
    </Grid>
</UserControl>
