<Window x:Class="WpfApp.Views.CadastroPessoaDetalhe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Pessoa" Height="350" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0">
            Nome:
            <Run Text=" *" Foreground="Red" FontWeight="Bold"/>
        </TextBlock>
        <TextBox Grid.Row="1" x:Name="txtNome" Width="350" />

        <TextBlock Grid.Row="2" Margin="0,10,0,0">
            CPF:
            <Run Text=" *" Foreground="Red" FontWeight="Bold"/>
        </TextBlock>
        <TextBox Grid.Row="3" x:Name="txtCPF" Width="350" />

        <TextBlock Grid.Row="4" Margin="0,10,0,0">
            Endereço:
        </TextBlock>
        <TextBox Grid.Row="5" x:Name="txtEndereco" Width="350" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Salvar" Width="80" Margin="5" Click="BtnSalvar_Click"/>
            <Button Content="Cancelar" Width="80" Margin="5" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
